{
  "name": "thriveguitar",
  "version": "1.0.0",
  "description": "Theme for the website https://thriveguitar.com",
  "main": "postcss.config.js",
  "scripts": {
    "build:css": "npx tailwindcss -i ./assets/src/css/input.css -o ./assets/css/style.css",
    "build:css:watch": "npx tailwindcss -i ./assets/src/css/input.css -o ./assets/css/style.css --watch",
    "build:js": "webpack --mode production",
    "dev": "webpack --mode development",
    "watch": "npm-run-all --parallel build:css:watch dev"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^10.0.0",
    "browser-sync-webpack-plugin": "^2.3.0",
    "browsersync": "^0.0.1-security",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  }
}
